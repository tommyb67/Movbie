<div class="row-fluid">
  <div class="span4">
    <div class="movie_poster pull-left"><%= image_tag(@movie.poster) %></div>
  </div>
  <div class="span8">
    <h3><%= @movie.title %></h3>
    <p>Year: <%= @movie.year %></p>
    <p>Release Date: <%= @movie.release_date %></p>
    <p> Director(s):
      <% @movie.director.each do |director| %>
        <%= director %>
      <% end %>
    </p>
    <p>Plot: <%= @movie.plot %></p>
    <p>MPAA Rating: <%= @movie.mpaa_rating %></p>
    <p>
      Movbie Rating: <%= @movie.rating %>
      <% unless @movie.rating > 99 %>
        <%= link_to "<i class='icon-plus-sign'></i>".html_safe, voteup_path, method: 'post' %>
      <% end %>
      <% unless @movie.rating < 1 %>
        <%= link_to "<i class='icon-minus-sign'></i>".html_safe, votedown_path, method: 'post' %>
      <% end %>
    </p>

    <ul class="cast-list">
    <h4>Cast List:</h4>
    <% @movie.actors.each do |actor| %>
      <li><%= link_to actor.name, actor_path(actor) %></li>
    <% end %>
    </ul>
  </div>